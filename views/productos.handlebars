<section class="full-width pageContent">
		<div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
			<div class="mdl-tabs__panel is-active" id="tabNewAdmin">
				<div class="mdl-grid">
					<div class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--12-col-desktop">
						<div class="full-width panel mdl-shadow--2dp">
							<div class="full-width panel-tittle bg-primary text-center tittles">
								Nuevo Producto
							</div>
							<div class="full-width panel-content">
								<form action='/admin/crearProducto' method="post" enctype="multipart/form-data">
									<div>
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6">
                                                <label class="text-condensedLight" for="file_url" style="font-size:20px;">Foto del Producto</label>
                                                <div class="div_file btn">
                                                    <p class="texto">Escoger imagen (102x102) </p>
                                                    <input type="file" class="btn_enviar mdl-textfield__input" id="file_url" accept=".jpg,.png," name="image_producto" onchange="alertaOferta(this,this.files[0].size)"
                                                     required/>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6">
                                                <div id="poder" style="display: none;margin:0 auto">
                                                    <img style="" src="" height="102px" width="102px" id="img_destino">
                                                </div>
                                            </div>
                                        </div>
                                        <span id="msgError" style="display:none;color:#d50000;position:absolute;font-size:12px;margin-top:3px;">Solo se admite fotos de menos de 300kb</span>
                                    </div>
                                    <br><br>
									<div class="mdl-grid">
										<div class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--6-col-desktop">
											<br>
											<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
												<label class="text-condensedLight" style="font-size:20px;">Código Producto</label>
												<input class="mdl-textfield__input" type="text" solonum="true"  id="Cod_Prod" EnterNext="true" idNext="Des_Prod" name="Cod_Prod" maxlength="5" onblur="validarProducto(this)" requerido>
												<label class="mdl-textfield__label" for="Cod_Prod"></label>
												<span class="mdl-textfield__error">Ingrese sólo números</span>
											</div>
											<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
												<label class="text-condensedLight" style="font-size:20px;">Descripción</label>
												<input class="mdl-textfield__input" type="text" id="Des_Prod" EnterNext="true" idNext="Exis_Prod" name="Des_Prod" maxlength="60" requerido>
												<label class="mdl-textfield__label" for="Des_Prod"></label>
												<span class="mdl-textfield__error">Campo vacío</span>
											</div>
											<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
												<label class="text-condensedLight" style="font-size:20px;">Existencia</label>
												<input class="mdl-textfield__input" solonum="true" type="text"  id="Exis_Prod" EnterNext="true" idNext="PrecComp_Pro" name="Exis_Prod" maxlength="5" onblur="comprobarExistencia(this,false)" requerido>
												<label class="mdl-textfield__label" for="Exis_Prod"></label>
												<span class="mdl-textfield__error">Ingrese sólo numeros</span>
											</div>
										</div>
										<div class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--6-col-desktop">
											<br>
											<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
												<label class="text-condensedLight" style="font-size:20px;">Precio de Compra</label>
												<input class="mdl-textfield__input" solodecimal="true" type="text"  id="PrecComp_Pro" EnterNext="true" idNext="PrecVen_Pro" name="PrecComp_Pro" maxlength="7" requerido>
												<label class="mdl-textfield__label" for="PrecComp_Pro"></label>
												<span class="mdl-textfield__error">Ingrese sólo valores numéricos separados por una coma</span>
											</div>
											<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
												<label class="text-condensedLight" style="font-size:20px;">Precio de Venta</label>
												<input class="mdl-textfield__input" solodecimal="true" type="text" id="PrecVen_Pro" EnterNext="true" idNext="PrecVen_Pro" name="PrecVen_Pro" onblur="validarPrecioVenta()" maxlength="7" requerido>
												<label class="mdl-textfield__label" for="PrecVen_Pro"></label>
												<span class="mdl-textfield__error" id="mensajePV">Ingrese sólo valores numéricos separados por una coma</span>
											</div>
											<div>
                                               	<input type="button" id="btn-addClient" class="mdl-button mdl-js-button mdl-js-ripple-effect" style="color: #3F51B5; float:left;" onclick="saveProducto(event,this)" value="Guardar">
                                                <a href="/admin/inventario" class="mdl-button mdl-js-button mdl-js-ripple-effect" style="color: #3F51B5; float:left;">Ver Productos Registrados</a>
                                           </div>	
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
        </div>
</section>
<script src="../modular/scripts/productos.js"></script>
<link rel="stylesheet" href="../modular/estilos/empleados.css">
{{#if success_msg }}
	<input id="inputsucces" type="hidden" value="{{success_msg}}">
    <script type="text/javascript">
	    input = document.getElementById("inputsucces").value || "Accion realizada con éxito"
	    msgModal(input,'success',null);
    </script>
{{else if  error_msg }}
	<input id="inputError" type="hidden" value="{{error_msg}}">
    <script type="text/javascript">
	    input = document.getElementById("inputError").value || "Error inesperado"
	    msgModal(input,'error',"retroceder");
    </script>
{{/if}}
<script type="text/javascript">
    var titulo = document.getElementById("title_static");
    if (titulo) {
        titulo.innerHTML = '<i class="zmdi zmdi-washing-machine"></i><span class="hide-on-tablet">&nbsp;PRODUCTOS</span>'
    };
</script>
