<script type="text/javascript">
	function Modal (title,type,accion,dir) {
		swal({
	  	title: title,
	  	type: type,
	  	confirmButtonText: 'Ok',
	  	closeOnConfirm: false
		},
		function(isConfirm) {
			if (isConfirm) { 
				if (accion == "redireccionar") {
					location.href="/admin/"+dir
				}
				else{
					if (accion == "retroceder") {
						window.history.back();
					}
				}
		  	}
		}
		)
	}
</script>
{{#if error }}
	<input id="inputError" type="hidden" value="{{error}}">
    <script type="text/javascript">
	    input = document.getElementById("inputError").value || "Error inesperado"
        if (input == "" ) {
            input = "Error inesperado"
        }
	    Modal(input,'error',"retroceder");
    </script>
{{else if success_msg}}
    <script type="text/javascript">
    	Modal('Producto registrado con exito','success',"redireccionar","productos")
    </script>
{{else if edicion}}
    <script type="text/javascript">
    	Modal('Datos de Producto editados con exito','success',"redireccionar","inventario")
    </script>
{{else if eliminacion}}
    <script type="text/javascript">
    	Modal('Datos de Producto eliminados con exito','success',"redireccionar","inventario")
    </script>
{{/if}}